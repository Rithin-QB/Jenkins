@Library('my-shared-library') _

pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                checkoutGitRepo('https://github.com/jenkins-docs/simple-java-maven-app.git', 'master')
            }
        }
        stage('Build') {
            steps {
                buildCode('mvn clean install')
            }
        }
        stage('Build Docker Image') {
            steps {
                buildDockerImage('Dockerfile', 'my-image', 'latest')
            }
        }
        stage('Push Docker Image') {
            steps {
                pushDockerImage('my-image', 'latest', 'docker.example.com')
            }
        }
    }
}
