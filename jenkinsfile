@Library('my-shared-library') _

pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkoutGitRepo('https://github.com/Rithin-QB/Jenkins_Shared_Libs.git')
            }
        }
        stage('Build') {
            steps {
                buildCode('mvn clean install')
            }
        }
        stage('Build Docker Image') {
            steps {
                buildDockerImage('Dockerfile', 'my-image', 'latest')
            }
        }
        stage('Push Docker Image') {
            steps {
                pushDockerImage('my-image', 'latest', 'docker.example.com')
            }
        }
    }
}
